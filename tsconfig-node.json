{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist/node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ]
}